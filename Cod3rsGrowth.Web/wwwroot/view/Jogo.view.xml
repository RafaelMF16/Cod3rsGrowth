<mvc:View 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f" 
    controllerName="ui5.codersgrowth.controller.Jogo"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page>
        <customHeader>
            <Toolbar>
                <Title 
                    text="{i18n>paginaJogoTitulo}"
                    titleStyle="H3"
                    class="sapUiResponsiveMargin">
                </Title>
            </Toolbar>
        </customHeader>
        <Table
            headerText="{i18n>paginaJogoTabelaTitulo}"
            id="tabelaJogo"
            fixedLayout="false"
            class="sapUiResponsiveMargin"
            width="auto"
            items="{listaJogos>/}"
            growing="true"
            growingThreshold="10"
            sticky="ColumnHeaders">
            <headerToolbar>
                <OverflowToolbar 
                    id="tabelaHeader"
                    design="Transparent">
                    <Title 
                        id="tabelaJogoTitulo"
                        text= "{i18n>paginaJogoTabelaTitulo} ({= ${listaJogos>/}.length})"
                        titleStyle="H3"/>
                    <ToolbarSpacer/>
                    <SearchField 
                        id="campoDePesquisaNome"
                        width="20%"
                        liveChange=".pegarValorDoCampoDePesquisa">
                        <layoutData>
                            <OverflowToolbarLayoutData
                                priority="NeverOverflow"/>
                        </layoutData>
                    </SearchField>
                    <ToolbarSeparator />
                    <Label 
                        text="{i18n>LabelGenero}"/>
                    <Select 
                        id="genero"
                        width="12%"
                        items="{listaGenero>/}"
                        change=".pegarValorComboBox">
                        <core:ListItem 
                            key="{listaGenero>key}"
                            text="{
                                path: 'listaGenero>descricao',
                                formatter: '.formatter.formatarValorPadraoComboBox'
                            }"/>
                    </Select>
                    <ToolbarSeparator />
                    <Label 
                        text="{i18n>LabelPrecoMin}"/>
                    <Input 
                        id="inputPrecoMin"
                        type="Number"
                        liveChange=".pegarValorDoCampoPrecoMin"
                        width="8%"/>
                    <Label 
                        text="{i18n>LabelPrecoMax}"/>
                    <Input 
                        id="inputPrecoMax"
                        type="Number"
                        liveChange=".pegarValorDoCampoPrecoMax"
                        width="8%"/>   
                    <ToolbarSeparator />
                    <Button 
                        text="{i18n>botaoAdicionar}"
                        icon="sap-icon://sys-add"
                        type="Ghost"
                        iconFirst="false"/>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column 
                    minScreenWidth="Small"
                    demandPopin="true"
                    vAlign="Middle"
                    hAlign="Begin">
                    <Text 
                        text="{i18n>colunaNomeTabelaJogo}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    vAlign="Middle"
                    hAlign="Center">
                    <Text 
                        text="{i18n>colunaGeneroTabelaJogo}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    vAlign="Middle"
                    hAlign="Center">
                    <Text 
                        text="{i18n>colunaPrecoTabelaJogo}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem 
                    type="Navigation">
                    <cells>
                        <ObjectIdentifier 
                            title="{listaJogos>nome}"/>
                        <Text
                            text="{listaJogos>genero}"/>
                        <ObjectNumber 
                            number="{
                                path: 'listaJogos>preco',
                                formatter: '.formatter.formatarJogosGratis'
                            }"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>