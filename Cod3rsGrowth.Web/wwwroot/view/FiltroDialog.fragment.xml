<core:FragmentDefinition xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog 
        id="filtroDialog">
        <customHeader>
            <tnt:ToolHeader style="Standard">
                <FlexBox 
                    width="100%"
                    justifyContent="SpaceBetween"
                    alignItems="Center">
                    <Title 
                        text="{i18n>jogoDialogTitulo}"/>
                    <Button 
                        text="{i18n>filtroDialogBotaoReset.texto}"
                        icon="sap-icon://clear-filter"
                        iconFirst="false"
                        type="Ghost"/>
                </FlexBox>
            </tnt:ToolHeader>
        </customHeader>
        <content>
            <VBox 
                class="sapUiSmallMargin"
                id="filtrosContainer">
                <form:SimpleForm 
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="{i18n>filtroDialogPreco.titulo}"
                    columnsM="2"
                    columnsL="2"
                    columnsXL="2">
                    <form:content>
                        <Label 
                            text="{i18n>filtroDialogLabelPrecoMin}"/>
                        <Input 
                            type="Number"
                            change=".pegarValorDoCampoPrecoMin"/>
                        <Label 
                            text="{i18n>filtroDialogLabelPrecoMax}"/>
                        <Input 
                            type="Number"
                            change=".pegarValorDoCampoPrecoMax"/>
                    </form:content>
                </form:SimpleForm>
                <form:SimpleForm 
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="{i18n>filtroDialogGenero.titulo}"
                    columnsM="2"
                    columnsL="2"
                    columnsXL="2">
                    <form:content>
                        <Label 
                            text="{i18n>filtroDialogLabelGenero}"/>
                        <Select 
                            id="genero">
                            <items>

                            </items>
                        </Select>
                    </form:content>
                </form:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button 
                text="{i18n>filtroDialogBotaoFiltrar.texto}"
                type="Ghost"
                icon="sap-icon://filter"
                press=".apertarFiltrarFiltroDialog"
                iconFirst="false"/>           
        </beginButton>
        <endButton>
            <Button 
                text="{i18n>filtroDialogBotaoCancelar.texto}"
                type="Reject"
                press=".apertarFecharFiltroDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>