<mvc:View
    controllerName="ui5.codersgrowth.app.detalhesJogo.DetalhesJogo"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
    <Page>
        <customHeader>
            <Toolbar>
                <FlexBox >
                    <Button 
                        id="idAdicionarJogoBotaoNavBack"
                        icon="sap-icon://nav-back"
                        press=".onNavBack">
                    </Button>
                </FlexBox>
                <FlexBox 
                    id="idFlexBoxHeader"
                    height="100%"
                    width="100%"
                    justifyContent="SpaceBetween"
                    alignItems="Center">
                    <Title 
                        text="{i18n>paginaJogoTitulo}"
                        titleStyle="H3"
                        class="sapUiResponsiveMargin"/>
                    <MenuButton
                        id="idMenuBotaoHeader"
                        type="Transparent"
                        icon="sap-icon://action-settings"  
                        menuPosition="EndBottom"> 
                        <menu>
                            <Menu >
                                <MenuItem
                                    id="idBotaoDeAparencia"
                                    text="AparÃªncia" 
                                    icon="sap-icon://palette">
                                    <items>
                                        <MenuItem 
                                            key="botaModoClaro"
                                            id="idBotaoModoClaro"
                                            icon="sap-icon://light-mode" 
                                            text="Claro"
                                            press=".alternarTema"/>
                                        <MenuItem 
                                            key="botaoModoEscuro"
                                            id="idBotaoModoEscuro"
                                            icon="sap-icon://dark-mode" 
                                            text="Escuro"
                                            press=".alternarTema"/>
                                    </items>
                                </MenuItem>
                            </Menu>
                        </menu>
                    </MenuButton>
                </FlexBox>
            </Toolbar>
        </customHeader>
    </Page>
</mvc:View>