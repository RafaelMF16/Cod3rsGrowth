<mvc:View 
	xmlns:tnt="sap.tnt"
	controllerName="ui5.codersgrowth.app.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	displayBlock="true">
	<tnt:ToolPage 
		id="idToolPage">
		<tnt:header>
			<tnt:ToolHeader >
				<FlexBox 
					alignItems="Center">
					<Text 
						text="{i18n>App.Nome}"/>
				</FlexBox>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:mainContents>
			<App id="app"/>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>