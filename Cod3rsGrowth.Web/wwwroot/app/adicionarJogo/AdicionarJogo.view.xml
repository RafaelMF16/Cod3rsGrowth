<mvc:View 
    xmlns:macros="sap.fe.macros" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f" 
    controllerName="ui5.codersgrowth.app.adicionarJogo.AdicionarJogo"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
    <Page>
        <customHeader>
            <Toolbar>
                <FlexBox >
                    <Button 
                        id="idAdicionarJogoBotaoNavBack"
                        icon="sap-icon://nav-back"
                        press=".onNavBack">
                    </Button>
                </FlexBox>
                <FlexBox 
                    id="idFlexBoxHeader"
                    height="100%"
                    width="100%"
                    justifyContent="SpaceBetween"
                    alignItems="Center">
                    <Title 
                        text="{i18n>paginaJogoTitulo}"
                        titleStyle="H3"
                        class="sapUiResponsiveMargin"/>
                    <MenuButton
                        id="idMenuBotaoHeader"
                        type="Transparent"
                        icon="sap-icon://action-settings"  
                        menuPosition="EndBottom"> 
                        <menu>
                            <Menu >
                                <MenuItem
                                    id="idBotaoDeAparencia"
                                    text="AparÃªncia" 
                                    icon="sap-icon://palette">
                                    <items>
                                        <MenuItem 
                                            key="botaModoClaro"
                                            id="idBotaoModoClaro"
                                            icon="sap-icon://light-mode" 
                                            text="Claro"
                                            press=".alternarTema"/>
                                        <MenuItem 
                                            key="botaoModoEscuro"
                                            id="idBotaoModoEscuro"
                                            icon="sap-icon://dark-mode" 
                                            text="Escuro"
                                            press=".alternarTema"/>
                                    </items>
                                </MenuItem>
                            </Menu>
                        </menu>
                    </MenuButton>
                </FlexBox>
            </Toolbar>
        </customHeader>
        <FlexBox 
            class= "sapUiResponsiveMargin"
            width="auto"
            justifyContent="SpaceBetween"
            direction="Column"
            backgroundDesign="Transparent">
            <form:SimpleForm 
                id="formAdicionarJogo"
                maxContainerCols="2"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanM="1"
                emptySpanL="8">
                <form:toolbar>
                    <OverflowToolbar >
                        <Title 
                            id="idTituloPaginaAdicionar"
                            text="{i18n>formAdicionarJogoTitulo}"
                            titleStyle="H4"/>
                        <ToolbarSpacer />
                        <Button 
                            id="idBotaoSalvarCriacaoJogo"
                            text="{i18n>adicionarJogoBotaoSalvarTexto}"
                            icon="sap-icon://save"
                            iconFirst="false"
                            type="Ghost"
                            press=".salvarJogo"/>
                        <Button 
                            id="idBotaoCancelarCriacaoJogo"
                            text="{i18n>adicionarJogoBotaoCancelarTexto}"
                            icon="sap-icon://sys-cancel-2"
                            iconFirst="false"
                            type="Reject"
                            press=".cancelarAdicaoDeJogo"/>
                    </OverflowToolbar>
                </form:toolbar>
                <form:content>
                    <Label 
                        text="{i18n>adicionarJogoLabelNomeTexto}" 
                        required="true"/>
                    <Input
                        placeholder="{i18n>placeholderInputNome}"
                        id="idInputNome"
                        required="true"
                        valueStateText="{i18n>campoNomeVazioTexto}"/>
                    <Label 
                        text="{i18n>adicionarJogoLabelPrecoTexto}"/>
                    <Input 
                        placeholder="{i18n>placeholderInputPreco}"
                        id="idInputPreco"
                        required="true"
                        type="Number"
                        valueStateText="{i18n>campoPrecoVazioTexto}"/>
                        <Label 
                        text="{i18n>adicionarJogoLabelGeneroTexto}"
                        required="true"/>
                    <Select 
                        id="idSelectGenero"
                        required="true"
                        items="{listaGeneros>/}"
                        width="50%"
                        valueStateText="{i18n>selectGeneroNaoDefinidoTexto}">
                        <core:ListItem 
                            key="{listaGeneros>key}"
                            text="{
                                path: 'listaGeneros>descricao',
                                formatter: '.formatter.formatarValorPadraoSelectParaTelaDeCriacao'
                            }"/>
                    </Select>
                </form:content>
            </form:SimpleForm>
        </FlexBox>
    </Page>
</mvc:View>