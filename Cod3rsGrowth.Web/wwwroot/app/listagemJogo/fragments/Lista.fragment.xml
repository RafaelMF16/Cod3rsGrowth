<core:FragmentDefinition
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    height="100%"
    busyIndicatorDelay="0">
    <List 
        items="{jogos>/}"
        headerText="{i18n>lista.Jogos.Titulo}"
        inset="false"
        class="sapUiTinyMargin"
        sticky="HeaderToolbar"
        updateFinished=".atualizarTitulo"
        width="auto"
        growingThreshold="10"
        growing="true"
        itemPress="aoSelecionarJogo">
        <headerToolbar>
            <OverflowToolbar >
                <Title 
                    id="idListaJogoTitulo"
                    titleStyle="H4"/>
                <ToolbarSpacer />
                <SearchField 
                    width="auto"
                    liveChange="aoPesquisarNome"/>
                <ToolbarSeparator />
                <Label 
                    text="{i18n>lista.Jogos.Label.Generos}"
                    showColon="true"/>
                <Select 
                    width="auto"
                    items="{generos>/}"
                    change="aoSelecionarGenero">
                    <core:ListItem 
                        key="{generos>key}"
                        text="{
                            path: 'generos>descricao',
                            formatter: '.formatter.formatarValorPadraoSelectParaTelaDeListagem'
                        }"/>
                </Select>
                <ToolbarSeparator />
                <Label 
                    text="{i18n>lista.Jogos.Label.PrecoMin}"
                    showColon="true"/>
                <Input 
                    type="Number"
                    liveChange="aoPesquisarPrecoMin"
                    width="5%"/>
                <Label 
                    text="{i18n>lista.Jogos.Label.PrecoMax}"
                    showColon="true"/>
                <Input 
                    type="Number"
                    liveChange="aoPesquisarPrecoMax"
                    width="5%"/>
                <ToolbarSeparator />
                <Button 
                    type="Transparent"
                    icon="sap-icon://add"
                    press=".aoClicarIrParaTelaDeAdicionarJogo"
                    tooltip="{i18n>Common.Adicionar}"/>
            </OverflowToolbar>
        </headerToolbar>
        <ObjectListItem 
            title="{jogos>nome}"
            type="Navigation">
            <ObjectAttribute 
                text="{jogos>genero}"/>
            <ObjectAttribute 
                text="{
                    path: 'jogos>preco',
                    formatter: '.formatter.formatarJogosGratis'
                }"/>
        </ObjectListItem>
    </List>
</core:FragmentDefinition>