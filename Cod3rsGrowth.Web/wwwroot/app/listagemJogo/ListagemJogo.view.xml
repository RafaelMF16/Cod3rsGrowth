<mvc:View 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f" 
    controllerName="ui5.codersgrowth.app.listagemJogo.ListagemJogo"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
    <Page >
        <customHeader>
            <Toolbar >
                <FlexBox 
                    height="100%"
                    width="16%"
                    alignItems="Center"
                    justifyContent="SpaceBetween">
                    <Button 
                        icon="sap-icon://nav-back"/>
                    <Title 
                        text="{i18n>tituloListagemJogo}"/>
                </FlexBox>
                <FlexBox
                    height="100%"
                    width="100%"
                    alignItems="Center"
                    justifyContent="End">
                    <Button 
                        icon="sap-icon://home"/>
                </FlexBox>
            </Toolbar>
        </customHeader>
        <Table
            headerText="{i18n>tabelaJogoTitulo}"            
            inset="true"
            class="sapUiNoMargin"
            items="{listaJogos>/}"
            growing="true"
            growingThreshold="10"
            sticky="HeaderToolbar"
            updateFinished=".atualizarTitulo">
            <headerToolbar>
                <OverflowToolbar >
                    <Title 
                        id="idTabelaJogoTitulo"
                        text= ""
                        titleStyle="H4"/>
                    <ToolbarSpacer />
                    <SearchField 
                        width="20%"
                        liveChange=".pegarValorDoCampoDePesquisa"/>
                    <ToolbarSeparator />
                    <Label 
                        text="{i18n>textoLabelGeneroTabelaJogo}"
                        showColon="true"/>
                    <Select 
                        width="12%"
                        items="{listaGeneros>/}"
                        change=".pegarValorDoSelect">
                        <core:ListItem 
                            key="{listaGeneros>key}"
                            text="{
                                path: 'listaGeneros>descricao',
                                formatter: '.formatter.formatarValorPadraoSelectParaTelaDeListagem'
                            }"/>
                    </Select>
                    <ToolbarSeparator />
                    <Label 
                        text="{i18n>textoLabelPrecoMinTabelaJogo}"
                        showColon="true"/>
                    <Input 
                        type="Number"
                        liveChange=".pegarValorDoCampoPrecoMin"
                        width="8%"/>
                    <Label 
                        text="{i18n>textoLabelPrecoMaxTabelaJogo}"
                        showColon="true"/>
                    <Input 
                        type="Number"
                        liveChange=".pegarValorDoCampoPrecoMax"
                        width="8%"/>
                    <ToolbarSeparator />
                    <Button 
                        text="{i18n>botaoAdicionar}"
                        icon="sap-icon://sys-add"
                        press=".aoClicarIrParaTelaDeAdicionarJogo"/>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column >
                    <Text 
                        text="{i18n>textoColunaNomeTabelaJogo}"/>
                </Column>
                <Column
                    vAlign="Middle"
                    hAlign="Center">
                    <Text 
                        text="{i18n>textoColunaGeneroTabelaJogo}"/>
                </Column>
                <Column
                    vAlign="Middle"
                    hAlign="Center">
                    <Text 
                        text="{i18n>textoColunaPrecoTabelaJogo}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem 
                    type="Navigation"
                    press=".aoClicarNavegarParaDetalhes">
                    <cells>
                        <ObjectIdentifier 
                            title="{listaJogos>nome}"/>
                        <Text
                            text="{listaJogos>genero}"/>
                        <ObjectNumber 
                            number="{
                                path: 'listaJogos>preco',
                                formatter: '.formatter.formatarJogosGratis'
                            }"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>