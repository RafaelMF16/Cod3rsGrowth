<mvc:View xmlns:uxap="sap.uxap" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f" 
    controllerName="ui5.codersgrowth.app.listagemJogo.ListagemJogo"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
    <f:DynamicPage >
        <f:title>
            <f:DynamicPageTitle >
                <f:heading>
                    <Title 
                        text="{i18n>listagemJogo.Titulo}"
                        titleStyle= "H3"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <core:Fragment fragmentName="ui5.codersgrowth.app.listagemJogo.fragments.Lista"/>
        </f:content>
    </f:DynamicPage>
</mvc:View>