<mvc:View 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.f" 
    controllerName="ui5.codersgrowth.app.jogo.Jogo"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page>
        <customHeader>
            <Toolbar>
                <FlexBox 
                    id="idFlexBoxHeader"
                    height="100%"
                    width="100%"
                    justifyContent="SpaceBetween"
                    alignItems="Center">
                    <Title 
                        text="{i18n>paginaJogoTitulo}"
                        titleStyle="H3"
                        class="sapUiResponsiveMargin"/>
                    <MenuButton
                        id="idMenuBotaoHeader"
                        type="Transparent"
                        icon="sap-icon://action-settings"  
                        menuPosition="EndBottom"> 
                        <menu>
                            <Menu >
                                <MenuItem
                                    id="idBotaoDeAparencia"
                                    text="AparÃªncia" 
                                    icon="sap-icon://palette">
                                    <items>
                                        <MenuItem 
                                            key="botaModoClaro"
                                            id="idBotaoModoClaro"
                                            icon="sap-icon://light-mode" 
                                            text="Claro"
                                            press=".alternarTema"/>
                                        <MenuItem 
                                            key="botaoModoEscuro"
                                            id="idBotaoModoEscuro"
                                            icon="sap-icon://dark-mode" 
                                            text="Escuro"
                                            press=".alternarTema"/>
                                    </items>
                                </MenuItem>
                            </Menu>
                        </menu>
                    </MenuButton>
                </FlexBox>
            </Toolbar>
        </customHeader>
        <Table
            headerText="{i18n>tabelaJogoTitulo}"
            id="idTabelaJogo"
            fixedLayout="false"
            class="sapUiResponsiveMargin"
            width="auto"
            items="{listaJogos>/}"
            growing="true"
            growingThreshold="10"
            sticky="ColumnHeaders,HeaderToolbar"
            updateFinished=".atualizarTitulo">
            <headerToolbar>
                <OverflowToolbar 
                    id="idTabelaHeader"
                    design="Transparent">
                    <Title 
                        id="idTabelaJogoTitulo"
                        text= ""
                        titleStyle="H4"/>
                    <ToolbarSpacer/>
                    <SearchField 
                        id="idCampoDePesquisaNome"
                        width="20%"
                        liveChange=".pegarValorDoCampoDePesquisa">
                        <layoutData>
                            <OverflowToolbarLayoutData
                                priority="NeverOverflow"/>
                        </layoutData>
                    </SearchField>
                    <ToolbarSeparator />
                    <Label 
                        text="{i18n>LabelGenero}"/>
                    <Select 
                        id="idCampoDeSelecaoGenero"
                        width="12%"
                        items="{listaGeneros>/}"
                        change=".pegarValorDoSelect">
                        <core:ListItem 
                            key="{listaGeneros>key}"
                            text="{
                                path: 'listaGeneros>descricao',
                                formatter: '.formatter.formatarValorPadraoComboBox'
                            }"/>
                    </Select>
                    <ToolbarSeparator />
                    <Label 
                        text="{i18n>LabelPrecoMin}"/>
                    <Input 
                        id="idInputPrecoMin"
                        type="Number"
                        liveChange=".pegarValorDoCampoPrecoMin"
                        width="8%"/>
                    <Label 
                        text="{i18n>LabelPrecoMax}"/>
                    <Input 
                        id="idInputPrecoMax"
                        type="Number"
                        liveChange=".pegarValorDoCampoPrecoMax"
                        width="8%"/>
                    <ToolbarSeparator />
                    <Button 
                        text="{i18n>botaoAdicionar}"
                        icon="sap-icon://sys-add"
                        type="Ghost"
                        iconFirst="false"/>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column 
                    minScreenWidth="Small"
                    demandPopin="true"
                    vAlign="Middle"
                    hAlign="Begin">
                    <Text 
                        text="{i18n>colunaNomeTabelaJogo}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    vAlign="Middle"
                    hAlign="Center">
                    <Text 
                        text="{i18n>colunaGeneroTabelaJogo}"/>
                </Column>
                <Column
                    minScreenWidth="Small"
                    demandPopin="true"
                    vAlign="Middle"
                    hAlign="Center">
                    <Text 
                        text="{i18n>colunaPrecoTabelaJogo}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem 
                    type="Navigation">
                    <cells>
                        <ObjectIdentifier 
                            title="{listaJogos>nome}"/>
                        <Text
                            text="{listaJogos>genero}"/>
                        <ObjectNumber 
                            number="{
                                path: 'listaJogos>preco',
                                formatter: '.formatter.formatarJogosGratis'
                            }"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>